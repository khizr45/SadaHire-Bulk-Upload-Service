{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["es2020"],
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*"]
  }
  